exec-once = hyprpaper

monitor=,preferred,auto,auto

exec-once = waybar

input {
    kb_layout = us,ru
    kb_options = grp:win_space_toggle
    follow_mouse = 1
    touchpad {
        natural_scroll = true
    }
}

general {
    gaps_in = 5
    gaps_out = 5
    border_size = 3
    col.active_border = rgba(888888ff)
    col.inactive_border = rgba(444444aa)
   
}
decoration {
    rounding = 4
}

gesture = 3, horizontal, workspace

animations {
    enabled = yes
    bezier = myEpicCurve, 0.05, 0.9, 0.1, 1.05
    
    animation = windows, 1, 5, myEpicCurve, slide
    animation = windowsOut, 1, 4, myEpicCurve, slide
    animation = border, 1, 6, default
    animation = fade, 1, 5, myEpicCurve
    animation = workspaces, 1, 4, myEpicCurve, slidefade 15%
}

bind = SUPER, RETURN, exec, kitty
bind = SUPER, Q, killactive
bind = SUPER, M, exit
bind = SUPER, E, exec, dolphin
bind = SUPER, F, fullscreen
bind = SUPER, W, exec, zen-browser

bind = SUPER, left, movefocus, l
bind = SUPER, right, movefocus, r
bind = SUPER, up, movefocus, u
bind = SUPER, down, movefocus, d

bind = SUPER SHIFT, left, movewindow, l
bind = SUPER SHIFT, right, movewindow, r

bind = SUPER, 1, workspace, 1
bind = SUPER, 2, workspace, 2
bind = SUPER SHIFT, 1, movetoworkspace, 1
bind = SUPER SHIFT, 2, movetoworkspace, 2

bind = SUPER, P, pseudo
bind = SUPER, S, togglesplit

misc {
    disable_hyprland_logo = true
    force_default_wallpaper = 0
}
